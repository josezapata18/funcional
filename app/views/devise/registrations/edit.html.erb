<div class="row center-xs">
  <div class="col-xs-8 col-md-6">
    <div class="box text-left">
              <h2>Editar Perfil</h2>
        
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
          <%= devise_error_messages! %>
        <div class="field"><%= f.label :name, "Nombre" %><br />
                <%= f.text_field :name, autofocus: true,class: "form-control" %></div>
                
        <div class="field"><%= f.label :last_name,"Apellido" %><br />
                <%= f.text_field :last_name, autofocus: true,class: "form-control" %></div>
                
        <div><%= f.check_box :is_female, {}, true %> <%= f.label :is_female, "Femenino" %> </div>
        <div><%= f.check_box :is_female, {}, false %> <%= f.label :is_female, "Masculino" %> </div>
            
            <div><%= f.label :date_of_birth,"Fecha Nacimiento" %><br />
                <%= f.date_select :date_of_birth,class: "form-control" %></div>
          <div class="field">
            <%= f.label :email,"Correo Electronico" %><br />
            <%= f.email_field :email, autofocus: true,class: "form-control" %>
          </div>
        
          <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
            <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
          <% end %>
        
          <div class="field">
            <%= f.label :password, "Contraseña" %> <i>(Dejelo en blanco si no desea cambiar)</i><br />
            <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
            <% if @minimum_password_length %>
              <br />
              <em>Mínimo <%= @minimum_password_length %> caracteres</em>
            <% end %>
          </div>
        
          <div class="field">
            <%= f.label :password_confirmation,"Confirmar Contraseña" %><br />
            <%= f.password_field :password_confirmation, autocomplete: "off",class: "form-control" %>
          </div>
        
          <div class="field">
            <%= f.label :current_password,"Contraseña Actual" %> <i>(Necesita su actual contraseña para confirmar el cambio)</i><br />
            <%= f.password_field :current_password, autocomplete: "off",class: "form-control" %>
          </div>
        
          <div class="actions">
            <%= f.submit "Actualizar",class:"btn be-green white" %>
          </div>
        <% end %>
        
        <h3>Cancelar Mi Cuenta</h3>
        
        <p>No te gusto? <%= button_to "Eliminar mi cuenta", registration_path(resource_name), data: { confirm: "Estas Seguro?" }, method: :delete, class:"btn be-green white" %></p>
        
        <%= link_to "Back", :back %>

      </div>
  </div>
</div>

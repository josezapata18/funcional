<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

<div class="field"><%= f.label :name,"Nombre" %><br />
        <%= f.text_field :name, autofocus: true, class:"form-control" %></div>
        
<div class="field"><%= f.label :last_name, "Apellido" %><br />
        <%= f.text_field :last_name, autofocus: true, class:"form-control" %></div>
        
<div><%= f.check_box :is_female, { checked: false }, true,false %> <%= f.label :is_female, "Femenino" %> </div>
    <div><%= f.check_box :is_female, {checked: false}, false,true %> <%= f.label :is_female, "Masculino" %> </div>
    
    <div><%= f.label :date_of_birth,"Fecha Nacimiento" %><br />
        <%= f.date_select :date_of_birth, class: "form-control" %></div>
    
  <div class="field">
    <%= f.label :email, "Correo Electronico" %><br />
    <%= f.email_field :email, autofocus: true,class: "form-control" %>
  </div>

  <div class="field">
    <%= f.label :password,"Contraseña" %>
    <% if @minimum_password_length %>
    <em>Mínimo (<%= @minimum_password_length %> caracteres)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off" ,class: "form-control"%>
  </div>

  <div class="field">
    <%= f.label :password_confirmation,"Confirmar Contraseña" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off",class: "form-control" %>
  </div>
  
  <div class="field">
    <%= f.check_box :permission_level, {checked: false}, "Profesor","Estudiante" %> <%= f.label "Profesor"%> - <%= f.check_box :permission_level, {checked: false}, "Estudiante","Profesor" %> <%= f.label "Estudiante"%>
  </div>
  
  <div class="actions">
    <%= f.submit "Registrarse",class:"btn be-green white" %>
  </div>
<% end %>